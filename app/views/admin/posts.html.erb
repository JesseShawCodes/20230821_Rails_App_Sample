<h1>Admin#posts</h1>
<p>Find me in app/views/admin/posts.html.erb</p>
<%= render 'admin/nav_links' %>

<div class="container">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Post</th>
                <th scope="col">Author</th>
                <th scope="col">Comments</th>
            </tr>
        </thead>
        <tbody>
            <% @posts.each do |post| %>
                <tr>
                <th scope="row"><%= post.id %></th>
                <th><%= link_to post.title.truncate(15), admin_post_path(post) %></th>
                <th><%= post.user.name %></th>
                <th><%= pluralize(post.comments.size, "Comment") %></th>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>